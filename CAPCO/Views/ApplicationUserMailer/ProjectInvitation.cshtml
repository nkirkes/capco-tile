@{
    Layout = "~/Views/ApplicationUserMailer/_Layout.cshtml";
    CAPCO.Infrastructure.Domain.ProjectInvitation invite = ViewBag.Invite;
}

<h2>@ViewBag.Title</h2>

<p>
    Hello! @invite.CreatedBy.FullName has invited you to a project at CAPCO Tile & Stone.</p>
<p>
    If you would like to register and view the project, please click the email below:
</p>
    
<a href="@Url.HttpRouteUrl("/account/register/?t=", null)@invite.InvitationKey">@Url.HttpRouteUrl("/account/register/?t=", null)@invite.InvitationKey</a>

<p>
    If the link doesn't work, please try entering the url into your web browser manually
    using copy/paste or by typing it in.</p>

<p>
    Thanks!</p>

~ The CAPCO Team
