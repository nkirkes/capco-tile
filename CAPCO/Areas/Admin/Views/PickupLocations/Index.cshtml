@model IEnumerable<CAPCO.Infrastructure.Domain.PickupLocation>

@{
    ViewBag.Title = "Manage Pickup Locations";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New Pickup Location", "New")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Code
        </th>
        <th>
            Users
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Code
        </td>
        <td>
            @(item.Users == null ? "None" : item.Users.Count.ToString())
        </td>
    </tr>
}

</table>


