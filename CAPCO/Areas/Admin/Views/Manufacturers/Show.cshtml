@model CAPCO.Infrastructure.Domain.Manufacturer

@{
    ViewBag.Title = "Manufacturer Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Manufacturer</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Section</div>
    <div class="display-field">@Model.Section</div>

    <div class="display-label">Products</div>
    <div class="display-field">@(Model.Products == null ? "None" : Model.Products.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


