@model IEnumerable<CAPCO.Infrastructure.Domain.ProductStatus>

@{
    ViewBag.Title = "Manage Product Statuses";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New Product Status", "New")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Code
        </th>
        <th>
            Products
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Code
        </td>
        <td>
			@(item.Products == null ? "None" : item.Products.Count.ToString())
        </td>
    </tr>
}

</table>


