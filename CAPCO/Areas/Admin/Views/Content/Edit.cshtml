@model CAPCO.Infrastructure.Domain.ContentSection

@{
    ViewBag.Title = "Edit Page";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("update", "content", new { id = Model.Id }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Section Details</legend>

		@Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")@* | @Html.ActionLink("Delete This Section", "delete", "content", new { area = "admin", id = Model.Id }, new { onclick = "javascript: return confirm(\"Are you sure?\");" }) *@
</div>
