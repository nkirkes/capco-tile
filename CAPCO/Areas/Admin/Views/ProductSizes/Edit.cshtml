@model CAPCO.Infrastructure.Domain.ProductSize

@{
    ViewBag.Title = "Edit Product Size";
}

<h2>Edit</h2>

@using (Html.BeginForm("update", "productsizes", new { id = Model.Id }, FormMethod.Post, null))
{
    @Html.ValidationSummary(true)
	@Html.AntiForgeryToken()
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <fieldset>
        <legend>ProductSize</legend>

		@Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index") | @Html.ActionLink("Delete This Product Size", "delete", "productsizes", new { area = "admin", id = Model.Id }, new { onclick = "javascript: return confirm(\"Are you sure? This cannot be undone.\");" }) 
</div>
